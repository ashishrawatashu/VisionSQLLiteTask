<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:id="@+id/user_image_CIV"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/user"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        android:id="@+id/user_name_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_image_CIV"
        app:layout_constraintStart_toEndOf="@+id/user_image_CIV"
        android:text="aaaajkhsdkasjdhkljasdh"/>

    <TextView
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        android:id="@+id/user_gender_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_TV"
        app:layout_constraintStart_toEndOf="@+id/user_image_CIV"
        android:text="aaaajkhsdkasjdhkljasdh"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_image_CIV"/>



</androidx.constraintlayout.widget.ConstraintLayout>